<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="手机号：" />

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/phone_edit_text1"
            android:textSize="20sp"/>

    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="查询并生成二维码"
        android:textSize="19sp"
        android:id="@+id/verification_search_button"
        android:onClick="verification_search_onClick"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="10dp"/>


    <ImageView
        android:id="@+id/qrcode_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:text="打印二维码"
        android:textSize="19sp"
        android:id="@+id/printer_qrcode_button"
        android:onClick="printer_qrcode_onClick"
        style="@style/Widget.AppCompat.Button.Colored"/>

</LinearLayout>
